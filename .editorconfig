# editorconfig.org
root = true                         # 根目录的配置文件，编辑器会由当前目录向上查找，如果找到 `roor = true` 的文件，则不再查找

[*]
charset = utf-8                     # 文件编码是 utf-8
indent_style = tab                  # 空格缩进,可选"space"、"tab"
indent_size = 2                     # 缩进空格为2个
end_of_line = lf                    # 结尾换行符，可选"lf"、"cr"、"crlf"
trim_trailing_whitespace = true     # 是否删除行尾空格
insert_final_newline = true         # 是否让文件以空行结束
curly_bracket_next_line = false     # 大括号不另起一行
spaces_around_operators = true      # 运算符两遍都有空格

[*.md]
trim_trailing_whitespace = false    # 是否删除行尾空格